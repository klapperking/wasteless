<div class="my-2 d-flex flex-grow-1">
  <div class="ingredient-card">
    <div class="ingredient-icon">
    <% if inventory_ingredient.expiration_date <= Date.today + 2 %>
      <%= image_tag "alert_icon.ico" %>
    <% end %>
    </div>
    <div class="ingredient-name">
      <p><%= inventory_ingredient.ingredient.name%></p>
    </div>
    <div id="ingredient-qty">
      <p><%= inventory_ingredient.format_float %> <%= inventory_ingredient.ingredient.category.measuring_unit %></p>
    </div>
  </div>
</div>
