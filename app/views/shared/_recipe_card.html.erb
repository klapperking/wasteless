<div class="recipe-card">
        <div id="recipe-photo">
          <%= cl_image_tag recipe.photo.key %>
        </div>
        <div class="recipe-details-card">
          <div id="recipe-title">
            <h5><%= recipe.name %></h5>
          </div>
          <div id="recipe-nb-ingredients">
          <% @available_ingredients = [] %>
          <% recipe.ingredients.each do |ingr| %>
            <% @available_ingredients << ingr if @inventory_ingredients_ingredients.include?(ingr) %>
          <% end %>
            <p><%= @available_ingredients.count %> / <%= recipe.ingredients.count %> ingredients</p>
          </div>
          <div id="recipe-nb-people">
            <% if @match_order %>
              <div class="match-count">
                <p><%= recipe.number_of_people %> <%= recipe.number_of_people > 1 ? "people" : "person" %></p>
                <% if @match_order[recipe].to_i > 0 %>
                  <p style="color: #9ED663"><%= pluralize(@match_order[recipe], 'match') %></p>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
