<div class="container-sm">
  <div class= "mt-3">
    <%= render partial: "shared/recipe_card", locals: { recipe: @recipe } %>
    <i class="fa-solid fa-check" id="check-icon"></i>
  </div>
  <div class="d-flex justify-content-center">
    <div class="update-ingredients-inventory-card">
      <div class="container-sm">
        <div id="removed-inventory">
          <h5>Removed from the inventory</h5>
        </div>
        <div class="ingredients-list-to">
          <% @inventory_ingredients.each do |ingredient, quantity| %>
            <ul>
              <li><%= ingredient.name %>; <%= quantity %></li>
            </ul>
          <% end %>
        </div>
        <div id="added-shopping-list">
          <h5>Added to the shopping list</h5>
        </div>
        <div class="ingredients-list-to">
          <% @shopping_list_ingredients.each do |ingredient, quantity| %>
            <ul>
              <li><%= ingredient.name %>; <%= quantity %></li>
            </ul>
          <% end %>
        </div>
      </div>
    </div>
  </div>
    <div class="d-flex justify-content-center">
      <div class="validation-card m-3">
        <i class="fa-regular fa-circle-check"></i>
        <h5>Wasteless updated !</h5>
      </div>
    </div>
    <div class="banner-bottom">
      <div class="bottom-btn">
        <%= link_to "Go Back to Home", root_path%>
      </div>
    </div>
</div>
